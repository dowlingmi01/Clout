.mt-8.sm:mx-auto.sm:w-full.sm:max-w-md
  .bg-white.py-8.px-4.shadow.sm:rounded-lg.sm:px-10
    = simple_form_for([:admin, user]) do |f|
      .my-2
        = f.label :email, class: 'block text-sm font-medium text-gray-700'
        .mt-1
          = f.email_field :email, required: true, placeholder: true, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
      .my-2
        = f.label :first_name, class: 'block text-sm font-medium text-gray-700'
        .mt-1
          = f.text_field :first_name, required: true, placeholder: true, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
      .my-2
        = f.label :last_name, class: 'block text-sm font-medium text-gray-700'
        .mt-1
          = f.text_field :last_name, required: true, placeholder: true, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
      .my-2
        = f.label :password, class: 'block text-sm font-medium text-gray-700'
        .mt-1
          = f.password_field :password, required: true, placeholder: true,   class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
      .my-2
        = f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700'
        .mt-1
          = f.password_field :password_confirmation,  required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
      .my-2
        .mt-1
          = f.input :admin, collection: [['True', 'true'], ['False','false']], default: :false, class: "absolute right-0 z-10 mt-2 w-56 origin-top-right divide-y divide-gray-100 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"

      %button.w-full.flex.justify-center.mt-4.py-2.px-4.border.border-transparent.rounded-md.shadow-sm.text-sm.font-medium.text-white.bg-blue-600.hover:bg-blue-700.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-blue-500{:type => "submit"}
        = f.button :submit

