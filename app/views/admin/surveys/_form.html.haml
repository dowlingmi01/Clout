.mt-8.sm:mx-auto.sm:w-full.sm:max-w-md
  .bg-white.py-8.px-4.shadow.sm:rounded-lg.sm:px-10
    = simple_form_for([:admin, survey]) do |f|
      .my-2
        = f.input :survey_name,required: true, class: 'block text-sm font-medium text-gray-700'
        .mt-1
        = f.text_area :description, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
      .my-2
        = f.input :start_date,required: true, class: 'block text-sm font-medium text-gray-700'
      .my-2
        = f.input :end_date,required: true, class: 'block text-sm font-medium text-gray-700'
      .my-2
        = f.input :category_id,required: true, collection: Category.all, label: "Select Category", prompt: true, class: 'block text-sm font-medium text-gray-700'
      .my-2
        = f.input :cpi, input_html: { min: '0', step: 'any'},required: true, class: 'block text-sm font-medium text-gray-700'
      .my-2
        = f.input :loi, input_html: { min: '0', step: 'any'},required: true, class: 'block text-sm font-medium text-gray-700'


      %p Location
      = f.country_select :location

      %button.w-full.flex.justify-center.mt-4.py-2.px-4.border.border-transparent.rounded-md.shadow-sm.text-sm.font-medium.text-white.bg-blue-600.hover:bg-blue-700.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-blue-500{:type => "submit"}
        = f.button :submit

