%body
  %header
    %h1 Categories
    - admins_only do
      %ul.actions
        %li= link_to "New Category", new_admin_category_path, class: "new"
  %table.table.table-striped.table-responsive
    %thead
      %tr
        %th Name
        %th Created
        %th Surveys
        %th{:colspan => "3"}
    %tbody
      - @categories.each do |category|
        %tr
          %td= category.name
          %td= time_format(category.created_at)
          %td= "Surveys"
          %td
            = link_to "View", '#'
            | #{link_to "Edit", edit_admin_category_path(category)} | #{link_to "Delete", admin_category_path(category), data: {turbo: false, method: :delete, confirm: 'Are you sure?'}}
