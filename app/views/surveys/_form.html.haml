.row
  .col-sm-8.col-sm-offset-2
    = simple_form_for(survey) do |f|
      = f.input :survey_name
      = f.input :description
      = f.input :start_date, as: :date, start_year: Date.today.year, ampm: true, order: [:month, :day, :year]
      = f.input :end_date, as: :date, start_year: Date.today.year, ampm: true, order: [:month, :day, :year]
      = f.input :location
      = f.input :category_id, collection: Category.all, label: "Select Category", prompt: true
      = f.input :cpi
      = f.input :loi
      = f.button :submit, class: "btn btn-primary"
    %p
      = link_to "Back", surveys_path
