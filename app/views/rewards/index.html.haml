            .text-zinc-900.px-1 from
            .text-slate-800.font-bold.underline.px-1= link_to experience.survey.survey_name, survey_path(experience.survey.id)
            .text-gray-400.font-bold.px-1.text-sm= experience.created_at.strftime('%b %e at %l:%M %p')

    .overflow-hidden.rounded-lg.bg-white.px-4.py-5.shadow.md:p-6
