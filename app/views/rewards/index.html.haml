%div
  %h1.text-2xl.text-gray-900.text-center.font-bold My Rewards
  %dl.mt-5.grid.grid-cols-1.gap-5.sm:grid-cols-3
    .overflow-hidden.rounded-lg.bg-white.px-4.py-5.shadow.md:p-6
      %dt.truncate.text-sm.font-medium.text-gray-500 Rewards Cash earned
      %dd.mt-1.text-3xl.font-semibold.tracking-tight.text-gray-900= number_to_currency(current_user.total_rewards_cash)
      %button.accordion-button.collapsed.relative.flex.items-center.w-full.py-4.text-base.text-gray-800.text-left.bg-white.border-0.rounded-none.transition.focus:outline-none{"aria-controls" => "collapseOne5", "aria-expanded" => "false", "data-bs-target" => "#collapseOne5", "data-bs-toggle" => "collapse", :type => "button"}
        More Info
      #collapseOne5.accordion-collapse.collapse{"aria-labelledby" => "headingOne5"}
        .accordion-body.py-4.px-5
        - @rewards_cashes.each do |rewards_cash|
          .flex
            .text-lime-500.font-bold.px-1= "+ #{number_to_currency(rewards_cash.rewards_cash_amount)}"
            .text-zinc-900.px-1 from
            .text-slate-800.font-bold.underline.px-1=link_to rewards_cash.survey.survey_name, survey_path(rewards_cash.survey.id)
            .text-gray-400.font-bold.px-1.text-sm= rewards_cash.created_at.strftime('%b %e at %l:%M %p')
    .overflow-hidden.rounded-lg.bg-white.px-1.py-5.shadow.md:p-6
      %dt.truncate.text-sm.font-medium.text-gray-500 Rewards Cash pending
      / Temporary
