.mt-8.sm:mx-auto.sm:w-full.sm:max-w-md
  .bg-white.py-8.px-4.shadow.sm:rounded-lg.sm:px-10
    .text-center.text-2xl.px-4 Sort Questions
    %div{"data-controller" => "hello", "data-hello-url" => "/questions/:id/move"}
      - @questions.order(position: :asc).each do |question|
        %div{"data-id" => question.id}
          = form_tag votes_path, method: :post, remote: true, id: 'voting_form' do
            %p.text-2xl.py-1.text-md.font-semibold.text-gray-700= question.topic
            = hidden_field_tag 'question[id]', question.id
            = render partial: 'polls/vote_option', collection: question.vote_options, as: :option
            .h1.text-2xl= question.comment
