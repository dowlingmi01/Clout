%p{:style => "color: red", class: "text-center"}= notice
.relative.mx-auto.bg-gray
  .absolute.inset-0
    .bg-white{:class => "h-1/3 sm:h-2/3"}
  .relative.mx-auto.max-w-7xl
    .mx-auto.mt-12.grid.max-w-lg.gap-5
      .flex.flex-1.flex-col.justify-between.bg-white.p-6
      - if current_user.admin?
        .absolute.rounded-full.bg-slate-300.px-3.py-1.5.text-xs.font-medium= @poll.status
      .flex-1
        %p.text-sm.font-medium.text-indigo-600
          %p.text-2xl.font-semibold.text-gray-900.text-center
          %p.text-indigo-600.font-bold.text-sm.mb-4.mt-0.text-center
          - if @poll.closed?
            %h1.text-2xl.text-indigo-600.text-center THIS POLL HAS BEEN CLOSED
          - if @poll.open? 
            = render 'voting_form'
          - if @poll.draft? 
            = render 'voting_form'
          .px-6.pt-4.pb-2.text-center
          %div.p-2.text-center
          .text-gray-600.text-lg.border-t.py-3
.text-center
  = link_to "Edit this poll", edit_poll_path(@poll) if current_user.admin
  
  = button_to "Destroy this poll", @poll, method: :delete if current_user.admin

