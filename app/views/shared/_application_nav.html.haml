%body
  .cover-container.d-flex.h-100.p-3.mx-auto.flex-column
    %header.masthead.mb-auto
      .inner
        %h3.masthead-brand CloutCloud
        %nav.nav.nav-masthead.justify-content-center
          = link_to "Home", root_path, class: "nav-link"
          = link_to "Surveys", surveys_path, class: "nav-link"
          = link_to "Enrollments", enrollments_path, class: "nav-link"
          = link_to "Profile", profiles_path, class: "nav-link"
          - if user_signed_in?
            = link_to "My Surveys", user_path(current_user), class: "nav-link" if current_page?("/users/#<current_user.username")
          - admins_only do
            = link_to "Admin", admin_root_path, class: "nav-link"
          = login_helper "nav-link"