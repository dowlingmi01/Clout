%nav.bg-slate-800
  .mx-auto.max-w-7xl.px-4.sm.px-6.lg.px-8
    .flex.h-16.items-center.justify-between
      = image_tag("logos/ccname.png", width: "150px")
      .flex.items-center
        .flex-shrink-0
          = link_to "Home", root_path, class:"text-sm p-3 font-medium text-gray-200 transition-colors duration-300 cursor-pointer transform hover:text-blue-400"
          = link_to "Surveys", surveys_path, class:"text-sm p-3 font-medium text-gray-200 transition-colors duration-300 cursor-pointer transform hover:text-blue-400"
          = link_to "Enrollments", enrollments_path, class:"text-sm p-3 font-medium text-gray-200 transition-colors duration-300 cursor-pointer transform hover:text-blue-400"
      .flex-items-center
        .flex-shrink-0
          = link_to "My Profile", profiles_path, class:"text-sm p-3 font-medium text-gray-200 transition-colors duration-300 cursor-pointer transform hover:text-blue-400"
          - if user_signed_in?
            = link_to current_user.email, edit_user_registration_path, class:"text-sm p-3 font-medium text-gray-200 transition-colors duration-300 cursor-pointer transform hover:text-blue-400"
          = login_helper "text-sm p-3 font-medium text-gray-200 transition-colors duration-300 cursor-pointer transform hover:text-blue-400"
          - admins_only do
            = link_to "Admin", admin_root_path, class:"text-sm p-3 font-medium text-gray-200 transition-colors duration-300 cursor-pointer transform hover:text-blue-400"


